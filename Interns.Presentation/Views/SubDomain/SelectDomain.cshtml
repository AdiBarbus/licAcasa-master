@model Interns.Services.Models.SelectFK.SelectDomainViewModel
@{
    ViewBag.Title = "Select Domain";
}

<h2>Please choose the Domain</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
        <fieldset>

            <div class="form-group">
                <div class="control-label col-md-2 ">
                    @Html.DropDownListFor(m => m.SelectedDomainId,
                        new SelectList(Model.Domains, "Id", "Name"), "-- Select Domain --")
                </div>
            </div>

            <div class="control-label col-md-2">
                <input type="submit" value="Choose" />
            </div>

        </fieldset>
    </div>
}