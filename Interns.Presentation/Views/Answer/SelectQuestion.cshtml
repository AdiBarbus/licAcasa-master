@model Interns.Services.Models.SelectFK.SelectQuestionFK
@{
    ViewBag.Title = "Select Question";
}
<h2>Please choose the Question</h2>

<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <fieldset>
            <div class="form-group">
                <div class="control-label col-md-2 ">
                    @Html.DropDownListFor(m => m.SelectedQuestionId,
                        new SelectList(Model.Questions, "Id", "Quest"), "-- Select Question --")
                </div>
            </div>
            <div class="control-label col-md-2">
                <input type="submit" value="Choose" />
            </div>
        </fieldset>
    </div>
}